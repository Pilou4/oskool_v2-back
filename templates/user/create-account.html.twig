{% extends 'base.html.twig' %}

{% block body %}
<h2>Créer un compte</h2>

{{ form_start(userForm) }} 

    <div class="row">
        <div class="col-sm-6">
            {{ form_row(userForm.email) }}
            {{ form_row(userForm.password) }}
          
        </div>
    </div>
    

    <div> 
        <input type="submit" value="Créer mon compte" class="btn btn-primary">
    </div>

{{ form_end(userForm) }}
{% endblock %}
